    "@types/node": "^25.0.10",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
